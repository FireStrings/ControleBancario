<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal"
    android:layout_margin="25dp"
    tools:context="br.edu.ifspsaocarlos.controlebancario.activity.MainActivity" >

    <ImageButton
        android:id="@+id/imgBtAddAcc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/addacc"
        android:layout_margin="15dp"/>

    <ImageButton
        android:id="@+id/imgBtAddTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/addtrans"
        android:layout_margin="15dp"/>

    <ImageButton
        android:id="@+id/showAccImgBt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/listacc" />

    <ImageButton
        android:id="@+id/showTransImgBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/listtrans" />

</GridLayout>
